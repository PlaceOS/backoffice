{
    "env": "dev",
    "debug": true,
    "composer": {
        "domain": "localhost:4200",
        "route": "",
        "protocol": "http:",
        "use_domain": true,
        "local_login": false
    },
    "app": {
        "title": "ACA Booking UI",
        "name": "ACA Booking UI",
        "description": "ACA Booking UI written with Angular Framework",
        "short_name": "Bookings",
        "code": "BOOK",
        "logo": {
            "type": "img",
            "src": "assets/img/logo.svg",
            "inverse": "assets/img/logo-inverse.svg",
            "background": ""
        },
        "topbar": false,
        "booking": {
            "title_prefix": ""
        },
        "rooms": {
            "enabled": false
        },
        "users": {
            "enabled": false,
            "search": false
        },
        "select": {
            "header": "Please select a space"
        },
        "bookings": {
            "fields": [
                {
                    "key": "space",
                    "type": "input",
                    "label": "Space",
                    "hide": true
                },
                {
                    "key": "host",
                    "type": "custom",
                    "label": "Host"
                },
                {
                    "key": "date",
                    "type": "custom",
                    "label": "Date",
                    "hide": true
                },
                {
                    "key": "period",
                    "type": "group",
                    "children": [
                        {
                            "key": "time",
                            "type": "custom",
                            "label": "Start time"
                        },
                        {
                            "key": "duration",
                            "type": "custom",
                            "label": "Duration"
                        }
                    ]
                },
                {
                    "key": "title",
                    "type": "input",
                    "label": "Title"
                }
            ]
        }
    },
    "mock": true
}
